page-book-introduction {

//页面初始化的一些样式 start 


.toolbar-background{
    background: transparent !important;
}

   .back-button-icon:before{//返回按钮的默认内容 背景 文本等
       content: '';
    }
    .back-button-ios,.back-button-md{//设置返回按钮的位置样式等
        position: absolute;
        left: 15px;
//      top:20px;
        font-size: 19px;
        font-weight: normal;
        margin: 0;
        min-width: auto;
        min-height: auto;
    }
   .back-button{//设置返回按钮的背景图
        width: 12px;
        height: 20px;
        background: url(../assets/imgs/read/back_black.png) center center no-repeat;
        background-size:12px 20px;
        z-index: 10;
    }
    .back-button-text{//返回按钮的文本
       display: none;
    }
    .toolbar{
//      min-height: 60px !important;
    }
    .scroll-content{
//      margin-top: 105px !important;
//  padding-top: 40px;
    border-top: 1px solid #ebebeb;
    }
    
//页面初始化的一些样式 end




.headerheight{
    width: 100%;
    height: 100%;
}
.intro_tab{
    opacity: 0;
    position: fixed;
    top:60px;
    left: 0;
    width: 100%;
    height: 44px;
//  border-top: 1px solid #ebebeb;
    border-bottom: 3px solid #f3f3f3;
    z-index: 15;
    border-top: 1px solid #ebebeb;
}
.intro_t_p{
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #ffffff;
}
.b_line{
    position: absolute;
    width: 30px;
    height: 3px;
    background: #333333;
    border-radius:3px;
    display: block;
    bottom: 0;
    transition: all .6s;
}
.book_info_cover{
    padding: 10px 45px;
}
.book_info{
//  margin-right: 100px;
    color: #999999;
    font-size: 15px;
}
.cur_info{
    color: #333333;
}
.info_con{
    margin: 0 15px;
    padding-top: 40px;
}
.book_line{
    display: block;
    height: 18px;
    width: 3px;
    background: #d81d4a;
    margin-right: 12px;
}
.book_t{
    display: flex;
    align-items: center;
}
.b_item{
    border-bottom: 1px solid  #ebebeb;
    padding-bottom: 20px;
}
.show{
    opacity: 1;
}
.hidden{
    display: none;
}
}
