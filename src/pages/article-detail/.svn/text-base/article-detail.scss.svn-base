page-article-detail {
    h1{
        margin: 0;
    }
    p{
        margin: 0 0 15px 0;
    }
    .top-bar{
        padding: 15px;
        border-bottom: solid 1px #EBEBEB;
        h1{
            font-size: 18px;
            color: #333333;
            line-height: 1.5em;
            .line{
                display: inline-block;
                background: #D81D4A;
                margin-right: 10px;
                width: 2px;
                height: 15px;
                position: relative;
                top: 1px;
            }
        }
        .tool-bar{
            display: flex;
            justify-content: flex-end;
            align-items: center;
            height: 20px;
            margin-top: 10px;
            .view{
                font-size: 14px;
                color: #333333;
                padding-left: 30px;
                background: url(../assets/imgs/article/icon-view.png) no-repeat 0 center;
                background-size: 19px 15px;
                margin-right: 10px;
            }
            .like{
                font-size: 14px;
                color: #2a70e4;
                padding-left: 30px;
                background: url(../assets/imgs/article/icon-like.png) no-repeat 0 center;
                background-size: 16px 16px;
            }
        }
    }
    .back-button{
        background: url(../assets/imgs/icon-back.png) no-repeat center !important;
        background-size: 13px 21px !important;
    }
    .btn-share{
        width: 32px;
        background: url(../assets/imgs/article/btn-share.png) no-repeat center;
        background-size: 18px 18px;
    }
    .article-content{
        padding: 20px;
        font-size: 16px;
        color: #333333;
        line-height: 1.8em;
        img{
            max-width: 100%;
            display: block;
            margin: 10px auto;
        }
        div,p,font{
            line-height: 1.8em;
            margin: 10px 0;
        }
    }
    .article-content.nolike{
        padding: 0;
        img{
            margin: 0 auto;
        }
        div,p,font{
            margin: 0;
        }
    }
    .nopadding{
        padding: 0;
    }
    .btn-like{
        display: block;
        margin: 10px auto 30px auto;
        width: 75px;
        height: 30px;
        border-radius: 5px;
        background: #EBEBEB url(../assets/imgs/article/btn-like.png) no-repeat center;
        background-size: 16px 16px;
        box-sizing: border-box;
    }
    .btn-like.active{
        background-position: 10px center;
        padding-left: 15px;
    }
    .btn-like.active:after{
        display: block;
        line-height: 30px;
        content: "已赞";
        text-align: center;
        color: #666666;
    }
    .toolbar.my-toolbar{
        padding: 0 !important;
    }
    .my-footer-btn{
        position: absolute;
        top: 0;
        bottom: 0;
        width: 100%;
        display: flex;
    }
    .footer-a{
        flex-grow: 1;
        height: 100%;
        line-height: 44px;
        background-color: #d81d4a;
        font-size: 16px;
        color: #ffffff;
        display: flex;
        justify-content: center;
        span{
            width: 20px;
            height: 20px;
            background-repeat: no-repeat;
            background-image: url('../assets/imgs/icon-apply-plan.png'); 
            background-position: center center;
            background-size: 20px 18px;
            position: relative;
            margin-right: 5px;
            top: 12px;
        }
        span.contact{
            background-image: url('../assets/imgs/icon-contact-us.png'); 
        }
    }
    .footer-a:nth-child(2){
        background-color: #fdac10;
    }
}