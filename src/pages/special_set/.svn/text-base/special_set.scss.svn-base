page-special_set {
  .scroll-content{
      background-color: #f3f3f3;
  }
  .set_top{
      padding: 25px 0;
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;
  }
  .set_top>div{
    background: url('../assets/imgs/mine/setTxt.png') no-repeat center;
    background-size:auto 86px;
    height: 90px;
    width: 100%;  
  }
  .set_form_all{
      display: flex;
      flex-direction: column;
      padding: 0 20px 30px 20px;
      justify-content: center;
      align-items: center;
  }
  .set_form_list{
      width: 100%;
      height: 44px;
      line-height: 44px;
      border-radius: 5px;
      border: 1px solid #e5e5e5;
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;
      overflow: hidden;
      box-sizing: border-box;
      background-color: #fff;
      margin-bottom: 10px;
  }
  .set_form_liL{
      width: 70px;
      text-align: right;
      color: #333;
      font-weight: 600;
      font-size: 14px;
      margin-right: 15px;
  }
  .set_form_liR{
     flex: 1;
     padding: 0;
     border: none;
     outline: 0;
     font-size: 14px;
     color: #333; 
  }
  .setBtn{
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: center;
      height: 45px;
      line-height: 45px;
  }
  .setBtn>div{
      width: 135px;
      height: 45px;
      line-height: 45px;
      color: #fff;
      font-size: 18px;
      border-radius: 5px;
      background-color: #d81d4a;
      text-align: center;
  }
}
