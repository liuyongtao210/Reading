page-changePwd{
    .toolbar-title-md{
        padding-right: 56px !important;
    }
  .changePwd_pad{
     margin-top: 10px;
     background-color: #fff;  
     padding:30px;
     box-sizing: border-box;
     h1{
         margin: 0;
         margin-bottom: 40px;
         font-size: 30px;
         color: #333333;
     }
     input{
         font-size: 15px;
     }
  }
  .changePwd_list{
      height: 50px;
      line-height: 50px;
      border-bottom: 1px solid #bebebe;
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-direction: row;
      position: relative;
      box-sizing: border-box;
  }
  .changePwd_list_line{
      position: absolute;
      bottom: -1px;
      left: 0;
      width:100%;
      height: 2px;
      border-bottom: solid 1px #fe4743;
  }
  
  .changePwd_list input{
      border: 0;
      resize: none;
      padding: 0;
  }
  .changePwd_list_input{
     flex: 1;
     height: 48px;
     line-height: 48px;
     font-size: 15px;
     color: #333; 
  }
  .changePwd_list_delete{
      background: url('../assets/imgs/mine/changePwd_list_delete.png') no-repeat right center;
      background-size:13px auto;
      position: absolute;
      right: 0;
      top: 0;
      width: 20px;
      height: 100%;
  }
  .changePwd_list img{
      width: 72px;
      height: 27px;
      border-radius: 5px;
  }
  .changePwd_li_msg{
      height: 33px;
      line-height: 33px;
      border-radius: 33px;
      width: 100px;
      text-align: center;
      background-color: #f7f7f7;
      color: #fe4743;
      font-size: 13px;
  }
  .changePwd_li_msg.cur{
      background-color: #f5f5f5;
      color: #d81d4a;
  }
  .changePwd_li_msg.dis{
      color: #999;
  }
  .changPwd_btn{
      padding: 0 30px;
      margin-top: 10px;
  }
  .changPwd_btn>div{
      height: 50px;
      line-height: 50px;
      border-radius: 50px;
      color: #ffffff;
      background-color: #fe4743;
      font-size: 18px;
      text-align: center;
      box-shadow: 0 3px 12px #fed2dc;
  }
  .changPwd_btn>div.cur{
      background-color: #d81d4a;
  }
  .changPwd_btn>div.dis{
      color: #999;
  }
  //修改原css
  .scroll-content{
      background-color: #fff;
  }
  
  
}
