page-course-detail {
    .btn-share{
        width: 32px;
        background: url(../assets/imgs/article/btn-share.png) no-repeat center;
        background-size: 18px 18px;
    }
    h1,h2,h3,h4,h5,h6,p,ul,li{
        margin: 0;
        padding: 0;
        line-height: 1em;
        list-style: none;
    }
    .main-content{
        padding: 15px;
    }
    .tab{
        display: flex;
        border-radius: 5px;
        overflow: hidden;
        box-sizing: border-box;
        border: solid 1px #fe4743;
        margin-bottom: 15px;
        li{
            width: 50%;
            height: 33px;
            line-height: 33px;
            text-align: center;
            color: #fe4743;
            font-size: 16px;
        }
        li.active{
            background: #fe4743;
            color: #ffffff;
        }
    }
    .module{
        margin-bottom: 15px;
        .title{
            font-size: 16px;
            color: #333333;
            margin-bottom: 15px;
        }
        .detail{
            font-size: 14px;
            color: #333333;
            line-height: 1.6em;
            text-align: justify;
            p{
                line-height: 1.6em;
                margin-bottom: 1em;
            }
        }
        .teacher-bar{
            height: 50px;
            border-radius: 10px;
            display: flex;
            justify-content: flex-start;
            align-items: center;
            background: #f4f4f4 url(../../assets/imgs/course-detail/icon-arrow.png) no-repeat calc(100% - 10px) center;
            background-size: 15px 13px;
            .cover{
                width: 35px;
                height: 35px;
                border-radius: 35px;
                overflow: hidden;
                background: #dfdfdf;
                border: solid 1px #ffffff;
                margin: 0 10px;
                flex-shrink: 0;
            }
            .intro{
                width: 100px;
                flex-grow: 1;
                padding-right: 30px;
                .teacher-name{
                    font-size: 14px;
                    color: #333333;
                    margin-bottom: 5px
                }
                .teacher-intro{
                    font-size: 12px;
                    color: #999999;
                    white-space: nowrap;
                    overflow: hidden;
                    text-overflow: ellipsis;
                }
            }
        }
        .ppt-list{
            li{
                background: #f5f5f5;
                border-radius: 10px;
                overflow: hidden;
                min-height: 60px;
                line-height: 0;
                margin-bottom: 10px;
                img{
                    width: 100%;
                }
            }
        }
    }
    .course-list{
        li{
            height: 55px;
            position: relative;
            border-radius: 5px;
            background: #ffffff;
            box-shadow: 0 3px 16px #ebebeb;
            margin-bottom: 20px;
            padding-left: 30px;
            .line{
                position: absolute;
                left: 15px;
                top: 1px;
                height: 53px;
                border-left: solid 1px #ebebeb;
            }
            .icon{
                position: absolute;
                left: 10px;
                top: 22px;
                width: 12px;
                height: 12px;
                background: url(../../assets/imgs/course-detail/icon-circle-1.png) no-repeat center center;
                background-size: 10px;
            }
            .lesson{
                height: 55px;
                line-height: 55px;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                font-size: 16px;
                color: #333333;
                padding-right: 60px;
            }
            .play{
                position: absolute;
                width: 24px;
                height: 24px;
                top: 16px;
                right: 15px;
                background: url(../../assets/imgs/course-detail/btn-list-play.png) no-repeat;
                background-size: 24px 24px;
            }
            .current{
                position: absolute;
                height: 24px;
                line-height: 24px;
                color: #999999;
                top: 16px;
                right: 15px;
            }
            .current:before{
                content: "播放中"
            }
        }
    }
    .toolbar-content{
        padding: 0 10px 5px 10px;
    }
    .btn-buy{
        display: block;
        height: 50px;
        line-height: 50px;
        border-radius: 50px;
        text-align: center;
        background: #fe4743;
        color: #ffffff;
        font-size: 18px;
    }
}